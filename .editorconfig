# EditorConfig is awesome: https://EditorConfig.org

# top-most EditorConfig file
root = true

# Unix-style newlines with a newline ending every file
[*]
end_of_line = lf
insert_final_newline = true
trim_trailing_whitespace = true
charset = utf-8

# Python files
[*.py]
indent_style = space
indent_size = 4
max_line_length = 88

# YAML files (data/)
[*.{yml,yaml}]
indent_style = space
indent_size = 2

# JSON files (data/)
[*.json]
indent_style = space
indent_size = 2

# TOML files (pyproject.toml)
[*.toml]
indent_style = space
indent_size = 4

# Markdown files
[*.md]
indent_style = space
indent_size = 2
max_line_length = 120
trim_trailing_whitespace = false

# XML files (Tiled .tmx)
[*.{xml,tmx,tsx}]
indent_style = space
indent_size = 2

# Shell scripts
[*.{sh,ps1}]
indent_style = space
indent_size = 2

# Config files
[{.gitignore,.gitattributes,.pre-commit-config.yaml}]
indent_style = space
indent_size = 2

# Makefiles
[Makefile]
indent_style = tab
