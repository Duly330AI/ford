{
  // Use IntelliSense to learn about possible attributes.
  // Hover to view descriptions of existing attributes.
  // For more information, visit: https://go.microsoft.com/fwlink/?linkid=830387
  "version": "0.2.0",
  "configurations": [
    // === RUN GAME ===
    {
      "name": "Run FORD",
      "type": "debugpy",
      "request": "launch",
      "module": "game.main",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": true,
      "stopOnEntry": false,
      "showReturnValue": true,
      "redirectOutput": true
    },
    // === RUN GAME (with debug logging) ===
    {
      "name": "Run FORD (Debug Logging)",
      "type": "debugpy",
      "request": "launch",
      "module": "game.main",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "FORD_LOG_LEVEL": "DEBUG"
      },
      "justMyCode": true,
      "stopOnEntry": false,
      "showReturnValue": true,
      "redirectOutput": true
    },
    // === TESTS ===
    {
      "name": "Pytest: Current File",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "${file}",
        "-v",
        "--tb=short"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "PYTHONHASHSEED": "0"
      },
      "justMyCode": false,
      "stopOnEntry": false,
      "showReturnValue": true
    },
    {
      "name": "Pytest: All Tests",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-v",
        "--tb=short"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "PYTHONHASHSEED": "0"
      },
      "justMyCode": false,
      "stopOnEntry": false,
      "showReturnValue": true
    },
    {
      "name": "Pytest: Fast Tests (no slow)",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "-v",
        "-m",
        "not slow",
        "--tb=short"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "PYTHONHASHSEED": "0"
      },
      "justMyCode": false,
      "stopOnEntry": false,
      "showReturnValue": true
    },
    {
      "name": "Pytest: With Coverage",
      "type": "debugpy",
      "request": "launch",
      "module": "pytest",
      "args": [
        "--cov=game",
        "--cov-report=html",
        "--cov-report=term",
        "-v"
      ],
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}",
        "PYTHONHASHSEED": "0"
      },
      "justMyCode": false,
      "stopOnEntry": false,
      "showReturnValue": true
    },
    // === PYTHON FILES ===
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": true,
      "stopOnEntry": false,
      "showReturnValue": true
    },
    {
      "name": "Python: Current File (Debug All)",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal",
      "cwd": "${workspaceFolder}",
      "env": {
        "PYTHONPATH": "${workspaceFolder}"
      },
      "justMyCode": false,
      "stopOnEntry": false,
      "showReturnValue": true,
      "subProcess": true
    }
  ]
}
