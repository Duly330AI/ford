{
  // ===================================================================
  // FORD PROJECT - VS Code Settings
  // Python 2D Dungeon Crawler (Arcade + Pytest + Copilot Agents)
  // ===================================================================
  // === PYTHON ===
  "python.defaultInterpreterPath": "C:\\Users\\duly3\\.conda\\envs\\ford\\python.exe",
  "python.terminal.activateEnvironment": true,
  "python.terminal.activateEnvInCurrentTerminal": true,
  // === PYLANCE (Type Checking) ===
  "python.analysis.typeCheckingMode": "standard",
  "python.analysis.diagnosticMode": "workspace",
  "python.analysis.autoImportCompletions": true,
  "python.analysis.completeFunctionParens": true,
  "python.analysis.inlayHints.functionReturnTypes": true,
  "python.analysis.inlayHints.variableTypes": true,
  "python.analysis.inlayHints.pytestParameters": true,
  "python.analysis.aiHoverSummaries": true,
  // === FORMATTING (Black + Ruff) ===
  "[python]": {
    "editor.defaultFormatter": "ms-python.black-formatter",
    "editor.formatOnSave": true,
    "editor.codeActionsOnSave": {
      "source.organizeImports": "explicit",
      "source.fixAll": "explicit"
    },
    "editor.rulers": [
      88,
      120
    ]
  },
  "black-formatter.args": [
    "--line-length=88"
  ],
  // === LINTING (Ruff) ===
  "ruff.enable": true,
  "ruff.lint.enable": true,
  "ruff.format.enable": false,
  // === TESTING (Pytest) ===
  "python.testing.pytestEnabled": true,
  "python.testing.unittestEnabled": false,
  "python.testing.pytestArgs": [
    "tests",
    "-v",
    "--tb=short"
  ],
  "python.testing.autoTestDiscoverOnSaveEnabled": true,
  // === JUPYTER NOTEBOOKS ===
  "notebook.output.textLineLimit": 500,
  "notebook.formatOnSave.enabled": true,
  "notebook.codeActionsOnSave": {
    "source.organizeImports": "explicit"
  },
  "jupyter.askForKernelRestart": false,
  // === FILES ===
  "files.associations": {
    "*.tmx": "xml",
    "*.tsx": "xml",
    "*.json": "jsonc"
  },
  "files.exclude": {
    "**/__pycache__": true,
    "**/*.pyc": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "**/.coverage": true,
    "**/htmlcov": true,
    "**/.mypy_cache": true,
    "**/.tox": true,
    "**/.eggs": true,
    "**/*.egg-info": true
  },
  "files.watcherExclude": {
    "**/__pycache__/**": true,
    "**/.pytest_cache/**": true,
    "**/.ruff_cache/**": true,
    "**/.mypy_cache/**": true,
    "**/htmlcov/**": true
  },
  // === SEARCH ===
  "search.exclude": {
    "**/__pycache__": true,
    "**/.pytest_cache": true,
    "**/.ruff_cache": true,
    "**/.mypy_cache": true,
    "**/htmlcov": true,
    "**/poetry.lock": true,
    "**/*.egg-info": true
  },
  // === EDITOR ===
  "editor.formatOnSave": true,
  "editor.formatOnPaste": false,
  "editor.rulers": [
    88,
    120
  ],
  "editor.minimap.enabled": true,
  "editor.minimap.maxColumn": 120,
  "editor.bracketPairColorization.enabled": true,
  "editor.guides.bracketPairs": "active",
  "editor.inlineSuggest.enabled": true,
  "editor.quickSuggestions": {
    "other": true,
    "comments": false,
    "strings": true
  },
  "editor.suggest.snippetsPreventQuickSuggestions": false,
  "editor.suggestSelection": "first",
  "editor.tabSize": 4,
  "editor.insertSpaces": true,
  "editor.trimAutoWhitespace": true,
  "editor.wordWrap": "off",
  // === ERROR LENS (Inline Errors) ===
  "errorLens.enabled": true,
  "errorLens.enabledDiagnosticLevels": [
    "error",
    "warning"
  ],
  "errorLens.excludeBySource": [
    "cSpell"
  ],
  // === GITLENS ===
  "gitlens.ai.model": "vscode",
  "gitlens.ai.vscode.model": "copilot:gpt-4.1",
  "gitlens.codeLens.enabled": true,
  "gitlens.currentLine.enabled": true,
  "gitlens.hovers.enabled": true,
  // === TODO TREE ===
  "todo-tree.highlights.enabled": true,
  "todo-tree.general.tags": [
    "TODO",
    "FIXME",
    "HACK",
    "NOTE",
    "XXX",
    "BUG",
    "REFACTOR"
  ],
  "todo-tree.regex.regex": "(//|#|<!--|;|/\\*|^|^[ \\t]*(-|\\d+.))\\s*($TAGS)",
  "todo-tree.highlights.defaultHighlight": {
    "icon": "check",
    "type": "tag",
    "foreground": "#FFFFFF",
    "background": "#FFA500",
    "opacity": 50,
    "iconColour": "#FFA500"
  },
  "todo-tree.highlights.customHighlight": {
    "TODO": {
      "icon": "check",
      "iconColour": "#FFFF00",
      "background": "#FFFF00"
    },
    "FIXME": {
      "icon": "alert",
      "iconColour": "#FF0000",
      "background": "#FF0000"
    },
    "BUG": {
      "icon": "bug",
      "iconColour": "#FF0000",
      "background": "#FF0000"
    },
    "NOTE": {
      "icon": "note",
      "iconColour": "#0000FF",
      "background": "#0000FF"
    },
    "REFACTOR": {
      "icon": "tools",
      "iconColour": "#00FF00",
      "background": "#00FF00"
    }
  },
  // === MARKDOWN ===
  "[markdown]": {
    "editor.defaultFormatter": "DavidAnson.vscode-markdownlint",
    "editor.formatOnSave": true,
    "editor.wordWrap": "on",
    "editor.rulers": [
      120
    ]
  },
  "markdownlint.config": {
    "MD013": false,
    "MD033": false,
    "MD041": false
  },
  // === YAML (Data Files) ===
  "[yaml]": {
    "editor.defaultFormatter": "redhat.vscode-yaml",
    "editor.formatOnSave": true,
    "editor.tabSize": 2,
    "editor.insertSpaces": true
  },
  "yaml.schemas": {
    "https://json.schemastore.org/github-workflow.json": ".github/workflows/*.yml"
  },
  // === TOML (pyproject.toml) ===
  "[toml]": {
    "editor.defaultFormatter": "tamasfe.even-better-toml",
    "editor.formatOnSave": true
  },
  // === JSON/JSONC ===
  "[json]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  "[jsonc]": {
    "editor.defaultFormatter": "vscode.json-language-features",
    "editor.formatOnSave": true,
    "editor.tabSize": 2
  },
  // === TERMINAL ===
  "terminal.integrated.defaultProfile.windows": "PowerShell",
  "terminal.integrated.env.windows": {
    "PYTHONPATH": "${workspaceFolder}"
  },
  "terminal.integrated.cwd": "${workspaceFolder}",
  "terminal.integrated.scrollback": 10000,
  // === COPILOT AGENTS (CRITICAL FOR LLM WORKFLOW) ===
  "github.copilot.enable": {
    "*": true,
    "markdown": true,
    "plaintext": true,
    "scminput": false,
    "yaml": true,
    "json": true,
    "jsonc": true
  },
  "github.copilot.chat.summarizeAgentConversationHistory.enabled": false,
  "github.copilot.nextEditSuggestions.enabled": true,
  // === CHAT TOOLS (Agent Workflows) ===
  "chat.agent.maxRequests": 1000,
  "chat.emptyChatState.enabled": false,
  "chat.edits2.enabled": true,
  "chat.useNestedAgentsMdFiles": true,
  "chat.fontSize": 12,
  "chat.tools.global.autoApprove": true,
  "chat.tools.terminal.autoReplyToPrompts": true,
  "chat.tools.terminal.autoApprove": {
    "pytest": true,
    "poetry": true,
    "pre-commit": true,
    "ruff": true,
    "black": true,
    "git": true
  },
  "chat.tools.edits.autoApprove": {
    "**/.vscode/*.json": true,
    "**/*.md": false,
    "**/*.py": false
  },
  // === BETTER COMMENTS ===
  "better-comments.tags": [
    {
      "tag": "!",
      "color": "#FF2D00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "?",
      "color": "#3498DB",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "//",
      "color": "#474747",
      "strikethrough": true,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "todo",
      "color": "#FF8C00",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    },
    {
      "tag": "*",
      "color": "#98C379",
      "strikethrough": false,
      "underline": false,
      "backgroundColor": "transparent",
      "bold": false,
      "italic": false
    }
  ],
  // === COVERAGE GUTTERS ===
  "coverage-gutters.coverageFileNames": [
    "coverage.xml",
    "lcov.info",
    "cov.xml",
    "coverage.json"
  ],
  "coverage-gutters.showLineCoverage": true,
  "coverage-gutters.showRulerCoverage": true,
  // === SPELL CHECKER (Disabled per user preference) ===
  "cSpell.enabled": false,
  // === TELEMETRY ===
  "redhat.telemetry.enabled": false,
  "telemetry.telemetryLevel": "off",
  // === MISC ===
  "workbench.iconTheme": "material-icon-theme",
  "workbench.colorTheme": "Default Dark Modern",
  "explorer.confirmDelete": false,
  "explorer.confirmDragAndDrop": false,
  "git.autofetch": true,
  "git.confirmSync": false,
  "git.enableSmartCommit": true,
  "security.workspace.trust.untrustedFiles": "open",
  // === PYTHON INLAY HINTS (Show Type Info) ===
  "python.analysis.inlayHints.callArgumentNames": "partial"
}
