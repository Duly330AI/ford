{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "id",
    "entries"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$"
    },
    "min_depth": {
      "type": "integer",
      "minimum": 0
    },
    "entries": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "mob_id",
          "threat",
          "weight"
        ],
        "properties": {
          "mob_id": {
            "type": "string"
          },
          "threat": {
            "type": "integer",
            "minimum": 0
          },
          "weight": {
            "type": "number",
            "minimum": 0
          },
          "requires_skill": {
            "type": "string"
          }
        }
      }
    }
  }
}
