{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "id",
    "display_name",
    "cap"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$"
    },
    "display_name": {
      "type": "string"
    },
    "cap": {
      "type": "integer",
      "minimum": 1
    },
    "description_key": {
      "type": "string"
    }
  }
}
