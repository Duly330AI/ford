{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "type": "object",
  "additionalProperties": true,
  "required": [
    "id",
    "name",
    "inventory"
  ],
  "properties": {
    "id": {
      "type": "string",
      "pattern": "^[a-z0-9_]+$"
    },
    "name": {
      "type": "string"
    },
    "biomes": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "categories": {
      "type": "array",
      "items": {
        "type": "string"
      }
    },
    "modifiers": {
      "type": "object",
      "properties": {
        "buy": {
          "type": "number"
        },
        "sell": {
          "type": "number"
        }
      },
      "required": [
        "buy",
        "sell"
      ]
    },
    "inventory": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "item_id",
          "min",
          "max"
        ],
        "properties": {
          "item_id": {
            "type": "string"
          },
          "min": {
            "type": "integer",
            "minimum": 0
          },
          "max": {
            "type": "integer",
            "minimum": 0
          },
          "restock_turns": {
            "type": "integer",
            "minimum": 0
          }
        }
      }
    }
  }
}
